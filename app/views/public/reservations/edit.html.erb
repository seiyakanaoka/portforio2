<div class="yoyakuhenkou">
  <%= form_with model: @reservation, method: :patch, local: true do |f| %>
    <div class="form">
      <%= f.text_field :date, id: "date", class: "fieldset__input js__datepicker", placeholder: "Try me..." %>
    </div>

    <div class="form">
      <%= f.text_field :time, id: "time", class: "fieldset__input js__datepicker", placeholder: "Try me..." %>
    </div>

    <div class="form">
      <%= f.collection_select :item_id, Item.all, :id, :name, { prompt: "選択して下さい" } %>
    </div>

    <div class="form">
      <%= f.select :people, options_for_select((0..10).to_a), { prompt: '人数を選択してください' } %>人
    </div>

    <div class="form">
      <%= f.label :席数指定 %>
      <%= f.select :seat, options_for_select((1..10).to_a), { prompt: '選択' } %>
    </div>

    <div class="form">
      <%= f.text_area :request %>
    </div>

    <%= f.submit '予約確認画面へ' %>
  <% end %>
</div>