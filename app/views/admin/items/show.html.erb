<div class="show-item">
  <%= attachment_image_tag @item, :item_image, size: "100x100" %>
  <%= @item.name %>
  <%= @item.introduction %>
  <%= @item.price %><%= "円（税抜）" %>
  <%= @item.genre.name %>
  <% if @item.is_active == true %>
    <p>販売中</p>
  <% else %>
    <p>販売停止中</p>
  <% end %>
</div>

<%= link_to '編集する', edit_admin_item_path(@item) %>